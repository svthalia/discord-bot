{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "types"],
    "rootDirs": [
      "./src/scheduled/sync",
      "./src/authentication/complete",
      "./src/authentication/start",
      "./src/bot",
      "./src/common"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "testing"]
}
